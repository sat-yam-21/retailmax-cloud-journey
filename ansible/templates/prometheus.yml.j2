global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  # Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # Node Exporter
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:9100']

  # Application metrics
  - job_name: 'retailmax-app'
    static_configs:
      - targets: ['{{ app_server_ip }}:8080']
    metrics_path: '/metrics'
    scrape_interval: 10s

  # Nginx metrics (if using nginx-exporter)
  - job_name: 'nginx'
    static_configs:
      - targets: ['{{ app_server_ip }}:9113']
    scrape_interval: 10s

  # Docker metrics
  - job_name: 'docker'
    static_configs:
      - targets: ['{{ app_server_ip }}:9323']
    scrape_interval: 10s

  # ECS metrics (if running on ECS)
  - job_name: 'ecs'
    static_configs:
      - targets: ['{{ ecs_task_ip }}:8080']
    metrics_path: '/metrics'
    scrape_interval: 10s

alerting:
  alertmanagers:
    - static_configs:
        - targets:
