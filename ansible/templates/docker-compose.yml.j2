version: '3.8'

services:
  app:
    image: {{ ecr_repository_url }}:latest
    ports:
      - "{{ app_port }}:8080"
    environment:
      - NODE_ENV=production
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro 